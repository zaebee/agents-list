# AI-CRM Environment Variables Template
# Copy this file to .env and fill in your values

# Application Environment
ENV=production
DEBUG=false

# YouGile API Configuration
YOUGILE_API_KEY=your_yougile_api_key_here
YOUGILE_COMPANY_ID=your_company_id_here

# Database Configuration (if using external database)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# Security
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Frontend Configuration
REACT_APP_API_URL=/api

# PostgreSQL (for development)
POSTGRES_PASSWORD=secure_postgres_password_here

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password_here

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_S3_BUCKET=ai-crm-backups
BACKUP_S3_REGION=us-east-1
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your_email_password_here

# Performance Tuning
BACKEND_WORKERS=4
NGINX_WORKER_PROCESSES=auto
REDIS_MAXMEMORY=512mb

# Cloud Provider Specific
# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# GCP
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=ai-crm-rg
AZURE_TENANT_ID=your-tenant-id

# DigitalOcean
DIGITALOCEAN_TOKEN=your_do_token_here