# AI-CRM Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ========================================
# API KEYS (REQUIRED)
# ========================================
YOUGILE_API_KEY=your_production_yougile_api_key_here
AI_API_KEY=your_production_ai_api_key_here

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_PASSWORD=your_super_secure_database_password_here
DATABASE_URL=postgresql://ai_crm:${DB_PASSWORD}@postgres:5432/ai_crm_prod

# ========================================
# APPLICATION SETTINGS
# ========================================
AI_CRM_DEBUG=false
AI_CRM_LOG_LEVEL=INFO
AI_CRM_STORAGE_BACKEND=postgresql
AI_CRM_MAX_WORKERS=4

# ========================================
# SECURITY
# ========================================
SECRET_KEY=your_super_secret_key_for_sessions_and_tokens_here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# REDIS CACHE
# ========================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password_here

# ========================================
# MONITORING & ALERTING
# ========================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION=15d

# ========================================
# PERFORMANCE TUNING
# ========================================
AI_CRM_MAX_CONCURRENT_REQUESTS=20
AI_CRM_REQUEST_TIMEOUT_SECONDS=60
AI_CRM_CONNECTION_POOL_SIZE=20
AI_CRM_ENABLE_REQUEST_CACHING=true

# ========================================
# BACKUP SETTINGS
# ========================================
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
AWS_S3_BACKUP_BUCKET=ai-crm-backups-your-org
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ========================================
# SSL/TLS CONFIGURATION
# ========================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key
SSL_CERTIFICATE_CHAIN_PATH=/etc/nginx/ssl/chain.pem

# ========================================
# NOTIFICATION SETTINGS
# ========================================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=ai-crm@yourdomain.com
SMTP_PASSWORD=your_smtp_password
ADMIN_EMAIL=admin@yourdomain.com

# ========================================
# DEVELOPMENT OVERRIDES (for staging)
# ========================================
# Uncomment for staging environment
# AI_CRM_DEBUG=true
# AI_CRM_LOG_LEVEL=DEBUG
# ALLOWED_HOSTS=staging.yourdomain.com,localhost